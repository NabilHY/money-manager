<%= render 'layouts/header' %>
<div class="container">
  <div class="row">
    <% @groups.each do |group| %>
        <div class="col-12">
          <div class="card mt-3">
            <div class="card-body d-flex flex-row justify-content-between align-items-center">
              <div class="d-flex flex-row align-items-center gap-5">
                <%= image_tag group.icon, alt: 'icon', class: 'thumbnail' %>
                <div class="align-items-center">
                <h5 class="card-title"><%= group.name %></h5>
                <b>Created at :</b>
                <p><%= (group.created_at).to_fs(:short) %></p>
                </div>
              </div>
              <div>
                <b>Amount :</b>
                <p> <%= group.sum %> $</p>
              </div>
                <%= link_to "Transactions", group_expenses_path(group.id), class:"btn btn-primary" %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center mt-5 mb-5">
    <%= link_to "New Category", new_group_path, class: "btn btn-success" %>
  </div>
</div>
